@model ContatoModel
@{
    ViewData["Title"] = "Criar contatos";
}
<div class="text-center">

    <h1 class="display-3">Cadastrar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
		@Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="E-mail">
		@Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="celular">Contato</label>
        <input type="password" asp-for="Celular" class="form-control" placeholder="Digite o número do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />
    <button type="submit" class="btn btn-outline-primary">Salvar</button>
    <a class="btn btn-outline-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

