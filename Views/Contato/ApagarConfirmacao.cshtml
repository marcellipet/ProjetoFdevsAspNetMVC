@model ContatoModel 
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Deseja apagar o contato @Model.Nome?</h3>
</div>

<a class="btn btn-outline-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-outline-danger" role="button" asp-controller="Contato" asp-action="Apagar">Confirmar</a>