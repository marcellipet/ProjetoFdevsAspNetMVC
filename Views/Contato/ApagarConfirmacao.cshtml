@model ContatoModel 
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Contato" role="button">Cancelar</a>
<a class="btn btn-outline-danger" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id" role="button">Confirmar</a>