@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de contatos";
}
<div class="text-center">

    <h1 class="display-3">Listagem de contatos</h1>

    <div>
        <a class="btn btn-outline-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo Contato</a>
    </div>
	<br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
			@if (Model != null && Model.Any())
			{
				foreach (ContatoModel contato in Model)
				{
					<tr>
						<th scope="row">@contato.Id</th>
						<td>@contato.Nome</td>
						<td>@contato.Email</td>
						<td>@contato.Celular</td>
						<td>
							<a class="btn btn-outline-success" asp-controller="Contato" asp-action="Editar" asp-route-id="@contato.Id">Editar</a>
							<a class="btn btn-outline-danger" asp-controller="Contato" asp-action="Excluir" asp-route-id="@contato.Id">Excluir</a>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="5" class="text-center">Nenhum contato encontrado.</td>
				</tr>
			}
        </tbody>
    </table>
</div>

